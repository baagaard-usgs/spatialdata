PROJ_TMPDIR = $(BLD_TMPDIR)/$(PROJECT)/$(PACKAGE)
PROJ_CLEAN += $(PROJ_BIN)

PROJ_CXX_INCLUDES += $(BUILD_INCDIR)

# CPPUNIT
PROJ_CXX_INCLUDES += ${CPPUNIT_INCDIR}
ifdef CPPUNIT_LIBDIR
PROJ_LCXX_FLAGS += -L$(CPPUNIT_LIBDIR)
endif
PROJ_LCXX_FLAGS += -lcppunit -ldl

# PYTHIA
PROJ_CXX_INCLUDES += $(PYTHIA_INCDIR)
ifdef PYTHIA_LIBDIR
PROJ_LCXX_FLAGS += -L$(PYTHIA_LIBDIR)
endif
PROJ_LCXX_FLAGS += -ljournal

# PYTHIAUTIL
PROJ_CXX_INCLUDES += $(PYTHIAUTIL_INCDIR)
ifdef PYTHIAUTIL_LIBDIR
PROJ_LCXX_FLAGS += -L$(PYTHIAUTIL_LIBDIR)
endif
PROJ_LCXX_FLAGS += -lpythiautil

# PROJ4
PROJ_CXX_INCLUDES += $(PROJ4_INCDIR)
ifdef PROJ4_LIBDIR
PROJ_LCXX_FLAGS += -L$(PROJ4_LIBDIR)
endif
PROJ_LCXX_FLAGS += -lproj

PROJ_LCXX_FLAGS += -lspatialdatageocoords

