PROJ_TMPDIR = $(BLD_TMPDIR)/$(PROJECT)/$(PACKAGE)/lib

PROJ_SAR = $(BLD_LIBDIR)/libspatialdata.$(EXT_SAR)

PROJ_CLEAN += $(PROJ_SAR)

ifdef NO_PYTHIA
PROJ_CXX_FLAGS += -DNO_PYTHIA
else

PROJ_CXX_INCLUDES += $(PYTHIA_INCDIR)
PROJ_CXX_INCLUDES += $(PYTHIAUTIL_INCDIR)

ifdef PYTHIAUTIL_LIBDIR
PROJ_LCXX_FLAGS += -L$(PYTHIAUTIL_LIBDIR)
endif
PROJ_LCXX_FLAGS += -lpythiautil

endif

